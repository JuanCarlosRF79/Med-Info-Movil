<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Historial médico"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvVacio"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tienes recetas registradas  \n registra una nueva desde nuestra página web \n www.medinfo.com.mx"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRecetas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_oscuro"
        android:onClick="hstRecetas"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Todas mis recetas"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvHstRecetas"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnMedicamentos"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/azul_oscuro"
        android:onClick="hstDetalles"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Todos mis medicamentos"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvHstMedicamentos"
        android:layout_width="match_parent"
        android:layout_height="210dp" />
</LinearLayout>