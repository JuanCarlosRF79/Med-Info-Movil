<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="249dp"
        android:layout_height="172dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="encargado"
        android:text="¿Estás a cargo de alguién? "
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLoginEncargado"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="encargado"
        android:text="Da click aquí"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/gCorreo"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="20sp"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="Correo / Número de teléfono"
        android:inputType="text"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/gContra"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:elevation="20sp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:shadowRadius="1" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/azul_oscuro"
        android:text="Iniciar Sesión"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:onClick="registrar"
        android:text="Registrarme"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:backgroundTint="#D84545"
        android:text="EMERGENCIA"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="0dp" />

</LinearLayout>