<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/et_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIDRecetaLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receta #1"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEstadoRecetaLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activa"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/azul_oscuro"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:background="@color/azul_bajito"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvInicioRecetaLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Inicio tratamiento: 20 oct. 2023"
        android:textColor="@color/black"
        android:layout_marginBottom="3dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medicamentos:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMedicamentosRecetaLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:lineSpacingExtra="4sp"
            android:text="Amoxicilina, Metamizol, Ciproheptadina"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvFinRecetaLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Fin del tratamiento:"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>