<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_border"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombreMedicamentoLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="Amoxicilina, Acido clavulanico suspension 400 mg/57mg/5ml"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtnEditarMed"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:contentDescription="Editar medicamento"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_edit_note_24" />

        <ImageButton
            android:id="@+id/imgbtnEliminarMed"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:contentDescription="Eliminar medicamento"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_delete_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvViaAdminLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:text="Vía de administración: Oral" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvporcionesMedLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6 ml"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvcadaLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cada 8 horas"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvduracionLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="durante 3 días"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>