<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="7dp"
    android:paddingLeft="7dp"
    android:paddingTop="10dp"
    tools:context=".RegitroActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Registrarte"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="34sp" />

            <EditText
                android:id="@+id/etNombres"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Ingresa tus nombres"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Ingresa tus apellidos"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etFechaNacimiento"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Fecha de nacimiento"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Registrate usando un correo electrónico\n o un número de teléfono"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etNumTel"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Ingresa un número de télefono"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Ingresa un correo electrónico"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etContrasena"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Ingresa una contraseña"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spnSexo"
                android:layout_gravity="center"
                android:background="@drawable/et_border"
                android:layout_width="300dp"
                android:minHeight="48dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:text="Información médica"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="En caso de padecer alguna enfermedad crónica \n ingresala en el siguiente apartado"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spnEnfermedades"
                android:layout_gravity="center"
                android:background="@drawable/et_border"
                android:layout_width="300dp"
                android:minHeight="48dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@drawable/et_border"
                android:id="@+id/tvEnfermedades"
                android:layout_gravity="center"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="En caso de tener alergia a algún \n ingresala en el siguiente apartado"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAlergia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/et_border"
                android:ems="10"
                android:hint="Nombre del médicamento"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:background="@drawable/et_border"
                android:id="@+id/tvAlergiasMed"
                android:layout_gravity="center"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>