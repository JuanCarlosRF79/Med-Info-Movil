<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Inicio"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn911"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#D84545"
        android:text="911"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/btnFamiliar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/azul_oscuro"
        android:text="Familiar"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:cornerRadius="0dp" />

    <LinearLayout
        android:id="@+id/linearlyInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Mis medicamentos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/lvMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_border">

        </ListView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Mi receta"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/lvReceta"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/et_border" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvVacio"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tienes recetas activas, activa una aquí  \n o registra una nueva desde nuestra página web \n www.medinfo.com.mx"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>